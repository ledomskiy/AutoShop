<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/product_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/product_name_label"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/product_description_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/product_description_label"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/product_price_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/product_price_label"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
